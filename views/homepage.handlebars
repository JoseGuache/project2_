<div class="flex gap-6 p-6 bg-gray-50 min-h-screen">
  <!-- Main Dashboard Area -->
  <div class="flex-1 flex flex-col gap-6">
    <!-- Graph Card -->
    <div class="bg-white rounded-2xl p-6 shadow-sm h-[400px]">
      <h2 class="text-gray-800 text-xl font-semibold">All Transactions</h2>
      <div class="h-[300px] mt-4">
        <canvas id="transactionChart"></canvas>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-3 gap-6">
      <div class="bg-white rounded-2xl p-6 shadow-sm">
        <h3 class="text-gray-600 text-sm font-semibold mb-2">Total Income</h3>
        <p class="text-2xl font-semibold text-gray-800">$ {{totalIncome}}</p>
      </div>
      <div class="bg-white rounded-2xl p-6 shadow-sm">
        <h3 class="text-gray-600 text-sm font-semibold mb-2">Total Expenses</h3>
        <p class="text-2xl font-semibold text-gray-800">$ {{totalExpenses}}</p>
      </div>
      <div class="bg-white rounded-2xl p-6 shadow-sm">
        <h3 class="text-gray-600 text-sm font-semibold mb-2">Total Balance</h3>
        <p class="text-2xl font-semibold text-green-500">$ {{totalBalance}}</p>
      </div>
    </div>
  </div>

  <!-- Right Sidebar -->
  <div class="w-[300px]">
    <div class="bg-white rounded-2xl p-6 shadow-sm">
      <h2 class="text-gray-800 text-xl font-semibold">Recent History</h2>
      <div class="mt-4 space-y-1">
        {{#if incomes.length}}
          {{#each incomes as |income|}}
            <div class="flex justify-between py-3 border-b border-gray-100">
              <span class="text-gray-700">{{income.name}}</span>
              <span class="text-green-500">+${{income.amount}}</span>
            </div>
          {{/each}}
        {{else}}
          <p class="text-gray-500">No recent transactions</p>
        {{/if}}
      </div>

      <div class="mt-6">
        <h3 class="text-gray-600 text-sm font-semibold mb-2">Salary</h3>
        <div class="flex justify-between text-sm text-gray-500">
          <span>Min $1200</span>
          <span>Max $8000</span>
        </div>
      </div>

      <div class="mt-6">
        <h3 class="text-gray-600 text-sm font-semibold mb-2">Expense</h3>
        <div class="flex justify-between text-sm text-gray-500">
          <span>Min $120</span>
          <span>Max $3000</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard.js"></script>