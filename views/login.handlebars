<div class="flex justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h2 class="text-2xl font-bold text-center mb-6">Login</h2>
      <form class="login-form">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="username-login">
            Username:
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
            id="username-login" 
            type="text" 
            required />
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="password-login">
            Password:
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" 
            id="password-login" 
            type="password" 
            required />
        </div>
        <div class="flex items-center justify-center">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" 
            type="submit">
            Login
          </button>
        </div>
      </form>
      <div class="text-center mt-4">
        <p class="text-gray-600">Don't have an account? 
          <a href="/signup" class="text-blue-500 hover:text-blue-700">Sign up instead</a>
        </p>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script> 