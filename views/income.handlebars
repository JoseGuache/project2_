<div class="container mt-4">
  <h2>Add New Income</h2>
  
  <form class="income-form">
    <div class="mb-3">
      <label for="income-name" class="form-label">Income Name:</label>
      <input type="text" class="form-control" id="income-name" required>
    </div>
    
    <div class="mb-3">
      <label for="income-amount" class="form-label">Amount ($):</label>
      <input type="number" class="form-control" id="income-amount" step="0.01" min="0" required>
    </div>

    <button type="submit" class="btn btn-primary">Add Income</button>
  </form>

  {{#if incomes.length}}
  <div class="mt-4">
    <h3>Your Incomes</h3>
    <ul class="list-group">
      {{#each incomes as |income|}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        {{income.name}}
        <span class="badge bg-primary rounded-pill">${{income.amount}}</span>
      </li>
      {{/each}}
    </ul>
  </div>
  {{/if}}
</div> 