<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-md rounded-2xl px-8 pt-6 pb-8 mb-4">
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Add New Expense</h2>

      <form class="expense-form">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="expense-name">
            Expense Description:
          </label>
          <input
            class="shadow appearance-none border rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
            id="expense-name" type="text" placeholder="e.g., Groceries, Rent, Utilities" required />
        </div>

        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="expense-amount">
            Amount ($):
          </label>
          <div class="relative">
            <span class="absolute left-3 top-2 text-gray-600">$</span>
            <input
              class="shadow appearance-none border rounded-lg w-full py-2 pl-8 pr-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
              id="expense-amount" type="number" min="0" step="0.01" placeholder="0.00" required />
          </div>
        </div>

        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="expense-date">
            Date:
          </label>
          <input
            class="shadow appearance-none border rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
            id="expense-date" type="date" required />
        </div>

        <div class="flex items-center justify-between">
          <button
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline w-full transition duration-200"
            type="submit">
            Add Expense
          </button>
        </div>
      </form>

      <div class="mt-6 text-center">
        <a href="/" class="text-indigo-600 hover:text-indigo-800 text-sm">
          ‚Üê Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</div>

<script src="/js/expense.js"></script>